<Window x:Class="HospitalManagementSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng ký tài khoản - Hệ thống Quản lý Bệnh viện" 
        Height="700" Width="600" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#F0F4F8">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40" 
                Margin="50"
                BorderBrush="#E0E0E0" 
                BorderThickness="1">
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="ĐĂNG KÝ TÀI KHOẢN" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <!-- Tên tài khoản -->
                <Label Content="Tên tài khoản:" 
                       FontSize="14" 
                       Foreground="#34495E"/>
                <TextBox x:Name="txtUsername" 
                         Height="35" 
                         FontSize="14"
                         Margin="0,5,0,12"
                         Padding="8"/>

                <!-- Họ và tên -->
                <Label Content="Họ và tên đầy đủ:" 
                       FontSize="14" 
                       Foreground="#34495E"/>
                <TextBox x:Name="txtFullName" 
                         Height="35" 
                         FontSize="14"
                         Margin="0,5,0,12"
                         Padding="8"/>

                <!-- Mật khẩu -->
                <Label Content="Mật khẩu:" 
                       FontSize="14" 
                       Foreground="#34495E"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,5,0,12"
                             Padding="8"/>

                <!-- Nhập lại mật khẩu -->
                <Label Content="Nhập lại mật khẩu:" 
                       FontSize="14" 
                       Foreground="#34495E"/>
                <PasswordBox x:Name="txtConfirmPassword" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,5,0,20"
                             Padding="8"/>

                <!-- Nút đăng ký -->
                <Button x:Name="btnRegister" 
                        Content="ĐĂNG KÝ" 
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,10"
                        Click="btnRegister_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Nút quay lại đăng nhập -->
                <Button x:Name="btnBackToLogin" 
                        Content="QUAY LẠI ĐĂNG NHẬP" 
                        Height="40"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="#7F8C8D"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="btnBackToLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ECF0F1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
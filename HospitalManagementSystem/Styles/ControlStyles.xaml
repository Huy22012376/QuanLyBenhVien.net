<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style cho TextBox -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,3,0,10"/>
        <Setter Property="Padding" Value="6"/>
    </Style>




    <!-- Style cho ComboBox -->
    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,3,0,10"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Style cho DatePicker -->
    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,3,0,10"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Style cho TextBox lớn (Multiline) -->
    <Style x:Key="FormTextBoxMultilineStyle" TargetType="TextBox">
        <Setter Property="Height" Value="60"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,3,0,10"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Style cho DataGrid -->
    <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowHeight" Value="35"/>
    </Style>

    <!-- Style cho Border (Card) -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- Style cho Header Border -->
    <Style x:Key="HeaderBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#2C3E50"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <!-- Style cho Menu Background Border -->
    <Style x:Key="MenuBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E88E5"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Style cho User Info Border -->
    <Style x:Key="UserInfoBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#1565C0"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

</ResourceDictionary>
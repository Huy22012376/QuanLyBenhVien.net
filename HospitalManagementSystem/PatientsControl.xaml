<UserControl x:Class="HospitalManagementSystem.PatientsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- FORM NHẬP LIỆU BỆNH NHÂN -->
        <Border Grid.Column="0"
                Style="{StaticResource CardBorderStyle}"
                Margin="0,0,10,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="THÔNG TIN BỆNH NHÂN" 
                               Style="{StaticResource SectionHeaderStyle}"/>

                    <Label Content="Họ và Tên:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtFullName" 
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <Label Content="Ngày sinh:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker x:Name="dpDateOfBirth" 
                                Style="{StaticResource FormDatePickerStyle}"/>

                    <Label Content="Giới tính:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="cmbGender" 
                              Style="{StaticResource FormComboBoxStyle}">
                        <ComboBoxItem Content="Nam"/>
                        <ComboBoxItem Content="Nữ"/>
                        <ComboBoxItem Content="Khác"/>
                    </ComboBox>

                    <Label Content="Số điện thoại:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtPhoneNumber" 
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <Label Content="Địa chỉ:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtAddress" 
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <Label Content="Khoa khám:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="cmbDepartment" 
                              Style="{StaticResource FormComboBoxStyle}"
                              DisplayMemberPath="DepartmentName" 
                              SelectedValuePath="DepartmentId"/>

                    <Label Content="Triệu chứng:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtSymptoms" 
                             Style="{StaticResource FormTextBoxMultilineStyle}"/>

                    <Label Content="Ngày khám:" 
                           Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker x:Name="dpAdmissionDate" 
                                Style="{StaticResource FormDatePickerStyle}"
                                Margin="0,3,0,15"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,10,0,0">
                        <Button x:Name="btnAddPatient" 
                                Content="Thêm" 
                                Style="{StaticResource AddButtonStyle}"
                                Click="btnAddPatient_Click"/>
                        <Button x:Name="btnUpdatePatient" 
                                Content="Sửa" 
                                Style="{StaticResource UpdateButtonStyle}"
                                Click="btnUpdatePatient_Click"/>
                        <Button x:Name="btnDeletePatient" 
                                Content="Xóa" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="btnDeletePatient_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- DATAGRID BỆNH NHÂN -->
        <Border Grid.Column="1"
                Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="DANH SÁCH BỆNH NHÂN" 
                           Style="{StaticResource DataGridHeaderStyle}"/>

                <DataGrid x:Name="dgPatients" 
                          Grid.Row="1"
                          Style="{StaticResource CustomDataGridStyle}"
                          SelectionChanged="dgPatients_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding PatientId}" 
                                            Width="50"/>
                        <DataGridTextColumn Header="Họ và Tên" 
                                            Binding="{Binding FullName}" 
                                            Width="*"
                                            MinWidth="120"/>
                        <DataGridTextColumn Header="Ngày sinh" 
                                            Binding="{Binding DateOfBirth, StringFormat='dd/MM/yyyy'}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Giới tính" 
                                            Binding="{Binding Gender}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="SĐT" 
                                            Binding="{Binding PhoneNumber}" 
                                            Width="110"/>
                        <DataGridTextColumn Header="Khoa" 
                                            Binding="{Binding Department.DepartmentName}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Ngày khám" 
                                            Binding="{Binding AdmissionDate, StringFormat='dd/MM/yyyy'}" 
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
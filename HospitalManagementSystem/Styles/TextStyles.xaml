<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style cho Page Title -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Style cho Page Subtitle -->
    <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#BDC3C7"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <!-- Style cho Section Header -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#34495E"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Style cho Section Header (DataGrid) -->
    <Style x:Key="DataGridHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#34495E"/>
        <Setter Property="Margin" Value="5,5,5,10"/>
    </Style>

    <!-- Style cho Label -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
    </Style>

    <!-- Style cho User Name -->
    <Style x:Key="UserNameStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Style cho User Role -->
    <Style x:Key="UserRoleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#BBDEFB"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
    </Style>

</ResourceDictionary>
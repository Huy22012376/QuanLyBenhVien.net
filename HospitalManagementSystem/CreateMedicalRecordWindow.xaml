<Window x:Class="HospitalManagementSystem.CreateMedicalRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Tạo Sổ Bệnh Án Mới" 
        Height="800" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,8,0,3"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" 
               BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="#1976D2" 
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="📋 TẠO SỔ BỆNH ÁN MỚI"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtPatientInfo"
                           Text="Bệnh nhân: Nguyễn Văn A - SĐT: 0123456789"
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- FORM CONTENT -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- THÔNG TIN BỆNH NHÂN -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📌 THÔNG TIN BỆNH NHÂN"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="Họ và tên:" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtPatientName" 
                                         Style="{StaticResource TextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"/>

                                <Label Content="Ngày sinh:" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtDateOfBirth" 
                                         Style="{StaticResource TextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Content="Giới tính:" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtGender" 
                                         Style="{StaticResource TextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"/>

                                <Label Content="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtPhoneNumber" 
                                         Style="{StaticResource TextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- THÔNG TIN NHẬP VIỆN -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏥 THÔNG TIN NHẬP VIỆN"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="Mã sổ bệnh án: *" 
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="#D32F2F"/>
                                <TextBox x:Name="txtRecordCode" 
                                         Style="{StaticResource TextBoxStyle}"/>

                                <Label Content="Bác sĩ điều trị: *" 
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="#D32F2F"/>
                                <ComboBox x:Name="cmbDoctor"
                                          Height="35"
                                          FontSize="13"
                                          DisplayMemberPath="FullName"
                                          SelectedValuePath="DoctorId"/>

                                <Label Content="Khoa điều trị: *" 
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="#D32F2F"/>
                                <ComboBox x:Name="cmbDepartment"
                                          Height="35"
                                          FontSize="13"
                                          DisplayMemberPath="DepartmentName"
                                          SelectedValuePath="DepartmentId"
                                          SelectionChanged="cmbDepartment_SelectionChanged"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Content="Ngày nhập viện: *" 
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="#D32F2F"/>
                                <DatePicker x:Name="dpAdmissionDate"
                                            Height="35"
                                            FontSize="13"
                                            SelectedDate="{x:Static sys:DateTime.Now}"
                                            SelectedDateChanged="dpAdmissionDate_SelectedDateChanged"/>
                                <TextBlock x:Name="txtDateError"
                                           Text=""
                                           Foreground="#D32F2F"
                                           FontSize="11"
                                           Margin="5,2,0,0"
                                           Visibility="Collapsed"/>

                                <Label Content="Trạng thái:" Style="{StaticResource LabelStyle}"/>
                                <ComboBox x:Name="cmbStatus"
                                          Height="35"
                                          FontSize="13"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="Đang điều trị"/>
                                    <ComboBoxItem Content="Chờ xét nghiệm"/>
                                    <ComboBoxItem Content="Chờ phẫu thuật"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- CHẨN ĐOÁN -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🩺 CHẨN ĐOÁN VÀ ĐIỀU TRỊ"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,15"/>

                        <Label Content="Chẩn đoán ban đầu: * (Tối đa 500 ký tự)" 
                               Style="{StaticResource LabelStyle}"
                               Foreground="#D32F2F"/>
                        <TextBox x:Name="txtInitialDiagnosis"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"
                                 MaxLength="500"
                                 TextChanged="txtInitialDiagnosis_TextChanged"/>
                        <TextBlock x:Name="txtDiagnosisCount"
                                   Text="0/500 ký tự"
                                   FontSize="11"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"
                                   Margin="0,2,0,0"/>

                        <Label Content="Kế hoạch điều trị: (Tối đa 1000 ký tự)" 
                               Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtTreatmentPlan"
                                 Height="100"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"
                                 MaxLength="1000"
                                 TextChanged="txtTreatmentPlan_TextChanged"/>
                        <TextBlock x:Name="txtPlanCount"
                                   Text="0/1000 ký tự"
                                   FontSize="11"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"
                                   Margin="0,2,0,0"/>

                        <Label Content="Ghi chú:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtNotes"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 FontSize="13"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- FILE ĐÍNH KÈM -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📎 FILE ĐÍNH KÈM"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtAttachment"
                                     Grid.Column="0"
                                     Style="{StaticResource TextBoxStyle}"
                                     IsReadOnly="True"
                                     Background="#F5F5F5"
                                     Text="Chưa có file đính kèm"/>

                            <Button Grid.Column="1"
                                    Content="📁 Chọn file"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Width="120"
                                    Margin="10,0,0,0"
                                    Click="btnBrowseFile_Click"/>
                        </Grid>

                        <TextBlock Text="Hỗ trợ: PDF, DOC, DOCX, JPG, PNG (Tối đa 10MB)"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>

                        <ListBox x:Name="lstAttachments"
                                 Height="100"
                                 Margin="0,10,0,0"
                                 Visibility="Collapsed">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" 
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="❌" 
                                                Grid.Column="1"
                                                Style="{StaticResource IconButtonStyle}"
                                                Tag="{Binding}"
                                                Click="btnRemoveFile_Click"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER BUTTONS -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            x:Name="pnlProgress"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <ProgressBar Width="200" 
                                 Height="20"
                                 IsIndeterminate="True"/>
                    <TextBlock Text="Đang lưu dữ liệu..."
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="🖨️ In giấy"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="120"
                            Margin="0,0,10,0"
                            Click="btnPrint_Click"/>
                    <Button Content="✖ Hủy"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="btnCancel_Click"/>
                    <Button x:Name="btnCreate"
                            Content="💾 Tạo sổ BA"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="130"
                            Click="btnCreate_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TOAST NOTIFICATION -->
        <Border x:Name="toastNotification"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="#323232"
                CornerRadius="5"
                Padding="20,15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,30"
                Visibility="Collapsed"
                Opacity="0">
            <TextBlock x:Name="txtToast"
                       Text="Thông báo"
                       Foreground="White"
                       FontSize="14"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>